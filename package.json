{
  "name": "basket-swap",
  "version": "1.0.0",
  "private": true,
  "homepage": "https://calvinmaighan.github.io/",
  "scripts": {
    "bootstrap": "lerna bootstrap --use-workspaces",
    "native-web": "lerna run web --scope=native --stream",
    "web": "lerna run web --scope=web --stream",
    "build-web": "lerna run build --scope=web",
    "deploy-web": "rimraf .parcel-cache && yarn build-web && sls deploy",
    "prettier": "prettier --write src",
    "clear-cache": "rimraf apps/libs/storybook/node_modules && rimraf apps/native/node_modules && rimraf apps/native/yarn.lock && rimraf apps/web/node_modules && rimraf apps/web/yarn.lock && rimraf yarn.lock && rimraf node_modules"
  },
  "dependencies": {
    "@babel/runtime-corejs3": "7.13.10",
    "@magic-ext/solana": "^0.1.0",
    "@project-serum/serum": "0.13.31",
    "@solana/web3.js": "1.0.0",
    "@walletconnect/client": "2.0.0-alpha.34",
    "axios": "0.21.1",
    "core-js": "3.9.1",
    "i18next": "19.8.5",
    "i18next-browser-languagedetector": "6.0.1",
    "nanoid": "3.1.22",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-redux": "7.2.2",
    "redux": "4.0.5",
    "rxjs": "7.0.0-beta.13",
    "styled-components": "5.2.1"
  },
  "devDependencies": {
    "@babel/core": "7.12.3",
    "@babel/eslint-parser": "7.12.1",
    "@babel/eslint-plugin": "7.13.10",
    "@babel/plugin-proposal-class-properties": "7.13.0",
    "@babel/plugin-proposal-decorators": "7.13.5",
    "@babel/plugin-proposal-nullish-coalescing-operator": "7.13.8",
    "@babel/plugin-proposal-optional-chaining": "7.13.8",
    "@babel/plugin-syntax-dynamic-import": "7.8.3",
    "@babel/plugin-transform-modules-commonjs": "^7.13.8",
    "@babel/plugin-transform-runtime": "7.13.9",
    "@babel/preset-env": "7.13.10",
    "@babel/preset-react": "7.9.4",
    "babel-eslint": "10.1.0",
    "babel-plugin-styled-components": "1.12.0",
    "cross-env": "7.0.3",
    "detect-port": "1.3.0",
    "eslint": "7.19.0",
    "eslint-config-prettier": "7.2.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-prettier": "3.3.1",
    "eslint-plugin-react": "7.22.0",
    "gh-pages": "3.1.0",
    "git-format-staged": "2.1.0",
    "husky": "4.2.5",
    "lerna": "3.21.0",
    "lint-staged": ">=10",
    "port-precheck": "https://github.com/trycrypto/port-precheck",
    "prettier": "2.0.5",
    "rimraf": "2.7.1"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "always",
    "trailingComma": "all"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,css,md}": "prettier --write"
  },
  "workspaces": {
    "packages": [
      "apps/*",
      "apps/libs/*"
    ]
  }
}
